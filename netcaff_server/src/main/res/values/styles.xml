<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Item">
        <item name="android:background">@drawable/border</item>
        <item name="android:paddingTop">@dimen/medium_gap</item>
        <item name="android:paddingBottom">@dimen/medium_gap</item>
        <item name="android:paddingLeft">@dimen/small_gap</item>
        <item name="android:paddingRight">@dimen/small_gap</item>
    </style>

    <style name="SmallItem" parent="@style/Item">
        <item name="android:padding">@dimen/small_gap</item>
    </style>

    <style name="CharacteristicTitle">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/colorAccentText</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CharacteristicNotif">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/borderColorText</item>
        <item name="android:background">@drawable/notif_background</item>
        <item name="android:paddingLeft">@dimen/v_small_gap</item>
        <item name="android:paddingRight">@dimen/v_small_gap</item>
    </style>

    <style name="Characteristic">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="GridLabel">
        <item name="android:paddingLeft">@dimen/medium_gap</item>
        <item name="android:paddingRight">@dimen/medium_gap</item>
    </style>

    <style name="GridSwitch">
        <item name="android:textAlignment">viewEnd</item>
        <item name="android:paddingLeft">@dimen/medium_gap</item>
        <item name="android:paddingRight">@dimen/medium_gap</item>
    </style>

    <style name="Root">
        <item name="android:padding">@dimen/small_gap</item>
    </style>

</resources>
